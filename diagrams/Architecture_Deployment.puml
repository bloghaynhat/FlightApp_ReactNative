@startuml FlightApp_Deployment_Diagram
!theme aws-orange
skinparam defaultFontSize 13
skinparam titleFontSize 18
skinparam packageFontSize 14
skinparam nodeFontSize 13

title Deployment Diagram - Flight Booking Application

' Define nodes with specific styling
node "User Device" as device #LightBlue {
    artifact "Mobile App\n(React Native)" as app #4A90E2
}

node "Development Machine\n(192.168.1.195:3000)" as devmachine #LightGreen {
    artifact "JSON Server\n(Node.js)" as server #50C878
    database "db.json" as db #FF6B6B
}

cloud "Expo Platform" as expo #Orange {
    artifact "Expo Go\nRuntime" as exporuntime
    artifact "Build Service\n(EAS)" as buildservice
}

cloud "External Services" as external #Purple {
    artifact "Payment Gateway\n(Mock)" as payment
}

' Relationships
device --> expo : "Download &\nRun via"
app --> exporuntime : "Runs on"
app --> server : "HTTP/REST\nPort 3000"
server --> db : "Read/Write"
app --> payment : "Mock Payment"

' Notes
